  "homepage": "https://github.com/Saionaro/notefer",
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@semantic-release/git": "^10.0.1",
    "@types/faker": "^6.6.9",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
