{
  "name": "notifer",
  "description": "The lightweight beautiful notifications system",
  "version": "1.0.0",
  "scripts": {
    "serve": "npm run build && parcel site/index.html --no-source-maps",
    "dev": "tsc -w",
    "build": "npm run build:js && npm run build:css",
    "build:js": "rollup --config",
    "build:css": "node scripts/buildCss.js",
    "build:site": "parcel build site/index.html --no-source-maps",
    "lint": "npm run lint:js && npm run lint:types",
    "lint:js": "eslint --ext .ts . src",
    "lint:types": "tsc --noEmit",
    "release": "semantic-release"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Saionaro <shibakow@gmail.com>",
  "license": "MIT",
  "keywords": [
    "notifications",
    "tiny",
    "nano"
  ],
  "repository": "git@github.com:Saionaro/notifer.git",
  "bugs": {
    "url": "https://github.com/Saionaro/notifer/issues"
  },
  "homepage": "https://github.com/Saionaro/notifer",
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "autoprefixer": "9.7.6",
    "cssnano": "4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "parcel": "^1.12.4",
    "parcel-plugin-clean-dist": "0.0.6",
    "postcss": "^7.0.29",
    "postcss-cli": "7.1.1",
    "postcss-load-config": "^2.1.0",
    "prettier": "^2.0.5",
    "rollup": "^2.8.2",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "semantic-release": "^17.0.7",
    "typescript": "^3.8.3"
  },
  "dependencies": {}
}
